{
  "name": "pkg-man-cli",
  "version": "2.0.0",
  "description": "Detect which package manager that should be used",
  "license": "MIT",
  "repository": "https://github.com/luftywiranda13/pkg-man-cli",
  "author": {
    "name": "Lufty Wiranda",
    "email": "lufty.wiranda@gmail.com",
    "url": "https://www.luftywiranda.com"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "precommit": "remove-lockfiles && xo --fix && lint-staged",
    "test:watch": "jest --watch",
    "test": "xo && jest"
  },
  "bin": {
    "pkg-man": "cli.js",
    "pkg-man-cli": "cli.js"
  },
  "files": [
    "cli.js"
  ],
  "dependencies": {
    "meow": "^4.0.0",
    "pkg-man": "^2.0.0"
  },
  "devDependencies": {
    "async-to-gen": "^1.3.3",
    "eslint-config-prettier": "^2.9.0",
    "execa": "^0.10.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^7.0.3",
    "prettier": "^1.19.1",
    "remove-lockfiles": "^2.1.2",
    "xo": "^0.18.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "async-to-gen"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "xo": {
    "extends": "prettier",
    "envs": [
      "jest"
    ]
  },
  "keywords": [
    "cli",
    "cli-app",
    "package-manager",
    "node",
    "npm",
    "yarn"
  ]
}
